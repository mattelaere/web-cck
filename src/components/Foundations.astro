---
import FoundationsCard from './FoundationsCard.astro';
import { getCollection } from 'astro:content';

const allFoundations = await getCollection('foundations');

//console.log(allFoundations);

// // Only return posts with `draft: true` in the frontmatter
// const draftBlogPosts = await getCollection('blog', ({ data }) => {
//   return data.draft === true;
// });
---

<section class="container" id="foundations">
  <header>
    <h2><span>Our foundations</span></h2>
    <p>
      These foundations create an environment that encourages innovation,
      creativity, and personal growth.
    </p>
  </header>
  <ul>
    {allFoundations.map((foundation) => (
      <li>
        <FoundationsCard foundation={foundation} />
      </li>
    ))}
  </ul>
</section>

<style>
  h2 {
    white-space: nowrap;
  }

  ul {
    counter-reset: counter;
  }
</style>
